.Header
  height 70px
  overflow: hidden;

  &-btn-login
    display none
    subtitle_tablet(blanco)
    line-height 70px

  &-btn-menu
    font-size 2.5em
    line-height 70px

  &-menu
    .logo-mobile
      img
        height 240px
        width 240px
    .list
      .link
        subtitle_tablet(gris)

  &-profile
    display inline-block
    padding .65rem 2.5rem .65rem .65rem
    .avatar
      &:after
        right: -18px
        border-left-width 8px
        border-right-width 8px
        border-top-width 10px
      img
        width 50px
        height 50px
    .menu-dropdown
      top 75px
      &:before
        border-left-width 15px
        border-right-width 15px
        border-bottom-width 15px
        top -10px
        right 1.8em
      .list
        .link
          subtitle_tablet(gris)
